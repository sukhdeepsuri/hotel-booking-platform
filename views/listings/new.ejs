<%- layout('layouts/boilerplate') -%>

<body>
  <section class="section-new">
    <div class="container">
      <h1 class="section-heading">Create New Listing :</h1>
      <form method="post" action="/listings">
        <div class="form-group">
          <label for="title">Title : </label>
          <input type="text" name="listing[title]" id="title" placeholder="Enter title" required />
        </div>

        <div class="form-group">
          <label for="description">Description : </label>
          <textarea type="text" name="listing[description]" id="description" placeholder="Enter description" class="message-textarea" required></textarea>
        </div>

        <div class="form-group">
          <label for="image">Upload image link : </label>
          <input type="text" name="listing[image]" id="image" placeholder="Enter image URL/Link" />
        </div>

        <div class="form-group-flex">
          <div class="form-group">
            <label for="price">Price : </label>
            <input type="number" name="listing[price]" id="price" placeholder="Enter price" required />
          </div>

          <div class="form-group form-lg-3">
            <label for="location">Location : </label>
            <input type="text" name="listing[location]" id="location" placeholder="Enter location" required />
          </div>
        </div>

        <div class="form-group mb--lg">
          <label for="country">Country : </label>
          <input type="text" name="listing[country]" id="country" placeholder="Enter country" required />
        </div>

        <button class="btn btn-edit">Add Listing</button>
      </form>
    </div>
  </section>
</body>
